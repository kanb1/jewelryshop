{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types"], // Make sure src/types is included
    "types": ["node", "express"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],  // Ensure that all .ts files are included
  "exclude": ["node_modules", "dist"]
}
